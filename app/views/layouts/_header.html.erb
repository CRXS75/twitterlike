<header class="header-login-signup">

  <div class="header-limiter">

    <h1>
      <% if current_user %>
          <%= link_to "Twitter<span>like</span>".html_safe, "/feed" %>
      <% else %>
          <%= link_to "Twitter<span>like</span>".html_safe, "/" %>
      <% end %>
    </h1>

    <% if current_user %>
      <nav>
         <%= link_to "Logout", "/signout" %>
         <%= link_to current_user.username.capitalize, :controller => 'users', :action => 'feed', :id => current_user.id %>
         <%= link_to "My account", user_path(current_user) %>
      </nav>

      <ul>
        <li>
          <%= form_tag('/search', :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search User" %>
              <%= submit_tag "Search" %>
          <% end %>
        </li>

        <li>
          <%= link_to "New Post", { :controller => 'microposts', :action => 'new'}, :class => 'full-button' %>
        </li>
      </ul>
    <% end %>
  </div>

</header>
